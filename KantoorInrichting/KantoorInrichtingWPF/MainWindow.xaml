<Window x:Class="KantoorInrichtingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KantoorInrichtingWPF"
        mc:Ignorable="d"
        Title="Plattegrond editor" Height="650" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="591*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonTotaalPrijs" Content="Totaalprijs" Grid.Column="1" HorizontalAlignment="Left" Margin="571,0,0,0" VerticalAlignment="Center" Height="43" Width="60" Click="OnButton_Totaalprijs_Click"/>
        <DockPanel LastChildFill="False">
            <Menu Width="100" HorizontalAlignment="Left" VerticalAlignment="Top">
                <MenuItem Header="Open">
                    <MenuItem Header="Nieuwe plattegrond" Click="OnMenuItem_nieuwePlattegrond_Click"/>
                    <MenuItem Header="Open plattegrond" Click="OnMenuItem_openPlattegrond_Click"/>
                </MenuItem>
            </Menu>
            <Menu Width="100" HorizontalAlignment="Left" VerticalAlignment="Top">
                <MenuItem Header="Opslaan">
                    <MenuItem Header="Opslaan" Click="OnMenuItem_opslaan_Click"/>
                    <MenuItem Header="Export" Click="OnMenuItem_export_Click"/>
                    <MenuItem Header="Opslaan als" Click="OnMenuItem_opslaanAls_Click" />
                </MenuItem>
            </Menu>
            <Menu Width="100" HorizontalAlignment="Left" VerticalAlignment="Top">
                <MenuItem Header="Meubels">
                    <MenuItem Header="Toevoegen" Click="OnMenuItem_toevoegen_Click" />

                    <MenuItem Header="Lijst" Click="OnMenuItem_lijst_Click"  />
                </MenuItem>
            </Menu>

        </DockPanel>
        <Canvas Grid.Column="1" Margin="0,43,0,0" Grid.RowSpan="2"/>
        <DataGrid x:Name="DGMeubels" Margin="0,43,0,0" Grid.RowSpan="2"/>
        <TextBox x:Name="TBMeubels" HorizontalAlignment="Left" Margin="0,25,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <Button x:Name="ButtonZoekenMeubel" Content="Zoeken" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Click="OnButton_ZoekenMeubel_Click" Height="20" Width="44"/>
        <Label x:Name="LabelTest" Content="" HorizontalAlignment="Left" Margin="19,0,0,0" VerticalAlignment="Center" Width="306" Height="42" Grid.Column="1"/>


    </Grid>
</Window>
